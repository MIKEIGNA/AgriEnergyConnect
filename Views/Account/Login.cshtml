@model AgriEnergyConnect.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<!-- Login Page Styles -->
<style>
    body {
        background: linear-gradient(to right, #4CAF50, #81C784);
        font-family: 'Roboto', sans-serif;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        margin: 0;
    }

    .card {
        border-radius: 15px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        background-color: #fff;
        max-width: 400px;
        width: 100%;
        padding: 40px;
    }

    .card-header {
        border-radius: 15px 15px 0 0;
        background-color: #4CAF50;
        color: #fff;
        text-align: center;
        padding: 20px;
    }

    .card-body {
        padding: 20px;
    }

    .btn-primary {
        background-color: #4CAF50;
        border-color: #4CAF50;
        border-radius: 25px;
        padding: 10px 20px;
        font-size: 1rem;
        width: 100%;
        transition: background-color 0.3s, border-color 0.3s;
    }

    .btn-primary:hover {
        background-color: #45a049;
        border-color: #45a049;
    }

    .forgot-password {
        margin-top: 10px;
        text-align: right;
        font-size: 0.9rem;
        color: #4CAF50;
        text-decoration: none;
    }

    .form-check-label {
        padding-left: 0;
    }

    .social-buttons {
        text-align: center;
        margin-top: 20px;
    }

    .btn-social {
        border-radius: 50%;
        width: 50px;
        height: 50px;
        color: #fff;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        font-size: 1.2rem;
        transition: transform 0.3s;
        margin: 0 5px;
    }

    .btn-social:hover {
        transform: translateY(-3px);
    }

    .btn-facebook {
        background-color: #3b5998;
    }

    .btn-twitter {
        background-color: #00aced;
    }

    .btn-google {
        background-color: #dd4b39;
    }

    .btn-linkedin {
        background-color: #007bb5;
    }

    .alert-danger {
        border-radius: 10px;
        background-color: #f8d7da;
        color: #721c24;
        padding: 10px 15px;
        margin-bottom: 20px;
    }
</style>

<!-- Login Page HTML -->
<div class="card shadow-lg" style="margin-left: 320px;">
    <div class="card-header">
        <h2>Welcome Back!</h2>
    </div>
    <div class="card-body">
        @if (ViewData.ModelState.IsValid && ViewData["InvalidLoginAttempt"] != null)
        {
        <div class="alert alert-danger" role="alert">
            @ViewData["InvalidLoginAttempt"]
        </div>
        }
        <form asp-action="Login" method="post">
            <div class="mb-3">
                <label for="Email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control" id="Email" placeholder="Enter your email" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label for="Password" class="form-label">Password</label>
                <input asp-for="Password" class="form-control" id="Password" type="password" placeholder="Enter your password" required />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="mb-3 form-check">
                <input asp-for="RememberMe" class="form-check-input" id="RememberMe" type="checkbox" />
                <label class="form-check-label" for="RememberMe">Remember me</label>
            </div>
            <button type="submit" class="btn btn-primary">Login</button>
            <a href="#" class="forgot-password">Forgot password?</a>
        </form>
        <hr>
        <p class="text-center lead">Or sign in with:</p>
        <div class="social-buttons">
            <a href="#" class="btn btn-social btn-facebook"><i class="fab fa-facebook-f"></i></a>
            <a href="#" class="btn btn-social btn-twitter"><i class="fab fa-twitter"></i></a>
            <a href="#" class="btn btn-social btn-google"><i class="fab fa-google"></i></a>
            <a href="#" class="btn btn-social btn-linkedin"><i class="fab fa-linkedin-in"></i></a>
        </div>
    </div>
</div>

<script src="https://kit.fontawesome.com/a076d05399.js"></script>
