<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AgriEnergyConnect</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
</head>
<body>
    <!-- Navigation Bar -->
  

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="/">AgriEnergyConnect</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">

                @if (User.IsInRole("Farmer"))
                {
                    <li class="nav-item @(ViewData["ActivePage"] as string == "Home" ? "active" : "")">
                        <a class="nav-link" href="/Farmer/Index">Home</a>
                    </li>
                    <li class="nav-item @(ViewData["ActivePage"] as string == "Products" ? "active" : "")">
                        <a class="nav-link" href="/Farmer/ViewProducts">View Products</a>
                    </li>
                    <li class="nav-item @(ViewData["ActivePage"] as string == "AddProduct" ? "active" : "")">
                        <a class="nav-link" href="/Farmer/AddProduct">Add Product</a>
                    </li>
                }
                else if (User.IsInRole("Employee"))
                {
                    <li class="nav-item @(ViewData["ActivePage"] as string == "Home" ? "active" : "")">
                        <a class="nav-link" href="/Employee/Index">Home</a>
                    </li>
                    <li class="nav-item @(ViewData["ActivePage"] as string == "Products" ? "active" : "")">
                        <a class="nav-link" href="/Employee/ViewProducts">View Products</a>
                    </li>
                }
            </ul>
        </div>
    </nav>


    <!-- Main Content -->
    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="footer mt-auto py-3 bg-light">
        <div class="container text-center">
            <span class="text-muted">&copy; 2024 AgriEnergyConnect</span>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
