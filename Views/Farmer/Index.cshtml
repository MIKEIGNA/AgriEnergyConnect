@{
    ViewData["Title"] = "Farmer Dashboard";
}

<!-- Farmer Dashboard Styles -->
<style>
    body {
        background-color: #f0f5f0;
        font-family: 'Roboto', sans-serif;
    }

    .container {
        padding-top: 50px;
    }

    .navbar {
        border-radius: 15px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        background-color: #fff;
    }

    .navbar-brand {
        font-weight: bold;
        color: #4CAF50;
        font-size: 1.5rem;
    }

    .nav-link {
        color: #6c757d;
        font-weight: bold;
        transition: color 0.3s;
    }

    .nav-link:hover {
        color: #4CAF50;
    }

    .btn-logout {
        background-color: #dc3545;
        border-color: #dc3545;
        color: #fff;
        transition: all 0.3s ease;
        border-radius: 50px;
        padding: 10px 20px;
    }

    .btn-logout:hover {
        background-color: #c82333;
        border-color: #bd2130;
    }

    .display-4 {
        font-family: 'Georgia', serif;
        font-weight: bold;
        color: #4CAF50;
    }

    .navbar-toggler-icon {
        background-image: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 30 30"><path stroke="rgba(0, 0, 0, 0.5)" stroke-width="2" d="M4 7h22M4 15h22M4 23h22"/></svg>');
    }

    .navbar-collapse {
        flex-grow: 0;
    }

    .navbar-nav {
        gap: 15px;
    }

    .card {
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        padding: 20px;
        margin-top: 20px;
    }

    .card-title {
        font-weight: bold;
        color: #4CAF50;
    }

    .card-text {
        color: #666;
    }
</style>

<!-- Farmer Dashboard HTML -->
<div class="container">
    <div class="row">
        <div class="col-md-12 text-center">
            @if (User.Identity != null)
            {
                <h1 class="display-4">Welcome, @User.Identity.Name</h1>
            }
            else
            {
                <h1 class="display-4">Welcome</h1>
            }
            <nav class="navbar navbar-expand-md navbar-light bg-light mt-4">
                <div class="container-fluid">
                    <a class="navbar-brand" href="#">Dashboard</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Farmer" asp-action="AddProduct">Add Product</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Farmer" asp-action="ViewProducts">View Products</a>
                            </li>
                        </ul>
                        <form class="form-inline my-2 my-lg-0" asp-controller="Account" asp-action="Logout" method="post">
                        <button type="submit" class="btn btn-outline-danger my-2 my-sm-0">
                            <i class="fas fa-sign-out-alt"></i> Logout
                        </button>
                    </form>
                    </div>
                </div>
            </nav>
        </div>
    </div>

    <!-- Example Cards for Additional Information -->
    <div class="row mt-4">
        <div class="col-md-4">
            <div class="card">
                <h5 class="card-title">Product Management</h5>
                <p class="card-text">Easily add and manage your products, track sales, and connect with potential buyers.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <h5 class="card-title">Profile Settings</h5>
                <p class="card-text">Update your profile settings, manage your account details, and change your password.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <h5 class="card-title">Support</h5>
                <p class="card-text">Access support resources, contact customer service, and find answers to frequently asked questions.</p>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
