@{
    ViewData["Title"] = "Employee Dashboard";
}

<!-- Add Bootstrap CSS -->
<link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">

<style>
    body {
        background-color: #f8f9fa;
        font-family: 'Arial', sans-serif;
    }

    .container {
        padding-top: 50px;
    }

    .navbar {
        border-radius: 10px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
        background-color: #fff;
    }

    .navbar-brand {
        font-weight: bold;
        color: #28a745;
    }

    .nav-link {
        color: #6c757d;
        font-weight: bold;
        transition: color 0.3s ease;
    }

    .nav-link:hover {
        color: #28a745;
    }

    .btn-outline-danger {
        border-radius: 20px;
        transition: all 0.3s ease;
    }

    .btn-outline-danger:hover {
        background-color: #dc3545;
        color: #fff;
    }

    h1 {
        color: #343a40;
        font-size: 2.5rem;
    }

    .card {
        border-radius: 10px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
    }

    .card-header {
        background-color: #28a745;
        color: #fff;
        border-radius: 10px 10px 0 0;
    }

    .card-body {
        background-color: #fff;
        border-radius: 0 0 10px 10px;
    }
</style>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-12 text-center">
            @if (User.Identity != null)
            {
                <h1>Welcome, @User.Identity.Name</h1>
            }
            else
            {
                <h1>Welcome</h1>
            }
            <nav class="navbar navbar-expand-md navbar-light bg-light mt-4">
                <a class="navbar-brand" href="#">Dashboard</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Employee" asp-action="AddFarmer">
                                <i class="fas fa-user-plus"></i> Add Farmer
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Employee" asp-action="ViewFarmers">
                                <i class="fas fa-users"></i> View Farmers
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Employee" asp-action="ViewProducts">
                                <i class="fas fa-boxes"></i> View Products
                            </a>
                        </li>
                    </ul>
                    <form class="form-inline my-2 my-lg-0" asp-controller="Account" asp-action="Logout" method="post">
                        <button type="submit" class="btn btn-outline-danger my-2 my-sm-0">
                            <i class="fas fa-sign-out-alt"></i> Logout
                        </button>
                    </form>
                </div>
            </nav>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Add Farmer</h5>
                </div>
                <div class="card-body">
                    <p class="card-text">Add new farmers to the system and manage their details.</p>
                    <a asp-controller="Employee" asp-action="AddFarmer" class="btn btn-success btn-block">
                        <i class="fas fa-user-plus"></i> Add Farmer
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">View Farmers</h5>
                </div>
                <div class="card-body">
                    <p class="card-text">View and manage the list of all farmers registered in the system.</p>
                    <a asp-controller="Employee" asp-action="ViewFarmers" class="btn btn-success btn-block">
                        <i class="fas fa-users"></i> View Farmers
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">View Products</h5>
                </div>
                <div class="card-body">
                    <p class="card-text">View and manage the list of all products available in the system.</p>
                    <a asp-controller="Employee" asp-action="ViewProducts" class="btn btn-success btn-block">
                        <i class="fas fa-boxes"></i> View Products
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Add Bootstrap JS -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
